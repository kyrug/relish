<!DOCTYPE html>
<html>
<head>
  <title>Relish</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js" %>
  <%= javascript_include_tag 'application','rails' %>
  <%= csrf_meta_tag %>
</head>
<body>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<div id="nav">
  <ul>
    <li><%= link_to(t('home.label'), '/')%></li>
    <li><%= link_to_bookmarks_page %></li>
  </ul>
</div>
<div id="user_nav">
  <% if user_signed_in? %>
    <%= t('hi')%>, <%= current_user.username %>
    <%= link_to "Sign out", destroy_user_session_path %>
  <% else %>
    <%= link_to "Sign up", new_user_registration_path %> or <%= link_to "sign in", new_user_session_path %>
  <% end %>
</div>
<%= yield %>

</body>
</html>