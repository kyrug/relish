= form_for(@bookmark) do |f|
  - if @bookmark.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@bookmark.errors.count, 'error')} prohibited this user from being saved:"
      %ul
      - @bookmark.errors.full_messages.each do |msg|
        %li= msg
  
  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :url
    %br
    = f.text_field :url
    
  .field
    = f.label :tag_list
    // = f.text_field :tag_list
    %br
    = f.autocomplete_field :tag_list, bookmark_autocomplete_tag_name_path
  
  .field
    = f.label :private
    = f.check_box :private

  - if params[:goback]
    %input{:type => :hidden, :name => :goback, :value => 1}

  .actions
    = f.submit
